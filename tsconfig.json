{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "jsx": "preserve",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "strictFunctionTypes": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}
